{
  "name": "@roadmanict/nodejs-http-requests",
  "version": "1.0.0",
  "description": "HTTP Requests helper",
  "repository": "https://github.com/roadmanict/nodejs-common",
  "main": "index.js",
  "scripts": {
    "clean": "rimraf ./dist ./coverage ./.nyc_output",
    "tslint": "tslint 'spec/**/*.ts' 'src/**/*.ts'",
    "ts": "tsc",
    "ts:incremental": "tsc --incremental",
    "ts:watch": "tsc -w",
    "watch": "nodemon --exec \"npm run tslint && npm run ts:incremental && npm run test\"",
    "test": "nyc jasmine",
    "build": "npm audit && npm run tslint && npm run ts && npm run test",
    "prepare": "tsc --declaration || exit 0",
    "prets:watch": "npm run clean",
    "prewatch": "npm run clean",
    "prebuild": "npm run clean"
  },
  "author": "Geert Weggemans",
  "license": "MIT",
  "dependencies": {
    "@hapi/joi": "^15.1.1",
    "@roadmanict/nodejs-code-style": "git+https://github.com/roadmanict/nodejs-code-styles.git",
    "@roadmanict/nodejs-common": "git+https://github.com/roadmanict/nodejs-common.git",
    "@types/hapi__joi": "^15.0.3",
    "@types/request": "^2.48.2",
    "@types/request-promise-native": "^1.0.16",
    "request": "^2.88.0",
    "request-promise-native": "^1.0.7",
    "typescript": "^3.5.3"
  },
  "devDependencies": {
    "@types/jasmine": "^3.4.0",
    "@types/nock": "^10.0.3",
    "jasmine": "^3.4.0",
    "nock": "^10.0.6",
    "nodemon": "^1.19.1",
    "nyc": "^14.1.1",
    "rimraf": "^3.0.0",
    "tslint": "^5.19.0",
    "tslint-microsoft-contrib": "^6.2.0"
  }
}
